.main{
  width: 100%;
  background: #FFD;
}
.mainTop{
  width: 100%;
  height: 120px;
  background-image: url(http://img.hb.aicdn.com/f63bd3e822714516aaf547ee08401ca6c38b012b12d0b-lraZqB_fw658);
  background-size: initial;
 
}
.small{
  display: block;
  width: 40px;
  height: 40px;
}
.big{
  display: block;
  width: 65px;
  height: 65px;
}

.tools{
  height: 180px;
  margin: -30px 15px 0 15px;
  margin-top:-30px;
  background: #FFF ;
  border-radius: 10px;
   box-shadow: inset 0 0 0 1px rgba(58, 153, 216, 0.1), inset 0 0em 0
		rgba(94, 136, 163, 0.2), 0 10px 10px rgba(58, 153, 216, 0.05);
}

.tool{
  width: 40px;
  height: 40px;
}
.toolText{
  display: block;
  font-size: 10px;
  margin-left:0px; 
}
.toolView{
  margin-top:20px;
  width: 40px;
  float: left;
}
.shareArea{
  height: 100px;
  margin: -30px 15px 0 15px;
  margin-top:20px;
  background: #FFF ;
  border-radius: 10px;
}
.shareView{
  width: 40px;
}
.shareImg{
  margin-top:20px;
  margin-left:-15px;
  width: 40px;
  height: 40px;
}
.shareText{
  display: block;
  font-size: 10px;
  margin-left:0px;
}
.shareBtn{
border:none;
height: 60px;
background-color:#FFF;
}
.shareBtn:after{
border:none;  
}


