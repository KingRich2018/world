.plan{
  width: 60px;
  height: 60px;
  margin:10px 45%; 
}
.form{
  margin: 0 20px;
}
.title{
  border: 1px solid gray;
  border-radius: 5px;
  height: 45px;
  font-size: 14px;
  text-align: center;
  margin-bottom: 15px;
}
.step{
  border: 1px solid gray;
  border-radius: 5px;
  height: 45px;
  font-size: 14px;
  text-align: center;
  margin-bottom: 15px;
}

.startTimeText{
  font-size: 18px;
  float: left;
}
.startTimeInput{
  font-size: 16px;
  color: gray;
  text-align: right;
  float: right;
}
.startTime{
  margin-bottom: 50px;
}
.endTime{
  clear:both;
}
.endTimeText{
  font-size: 18px;
  float: left;
}
.endTimeInput{
  font-size: 16px;
  color: gray;
  text-align: right;
  float: right;
}
