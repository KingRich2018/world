<view >
  <image class="plan" src="../../img/plan_icon.png"></image>
</view>
<view class="form">
  <form>
    <input class="title" name="title" placeholder="  请输入计划名称" /> 
    <input class="step" name="step" placeholder="强迫下自己" />
    <view class="startTime">
      <text class="startTimeText">开始时间</text>
      <view class="section">  
        <picker mode="date" value="{{date}}" start="2018-01-01"  bindchange="bindDateChange">  
          <view class="picker">  
            <input class="startTimeInput" disabled="disabled"  value='{{startDates}}'></input> 
          </view>  
          </picker>  
        </view> 
      </view>

      <view class="endTime">
      <text class="endTimeText">结束时间</text>
      <view class="section">  
        <picker mode="date" value="{{date}}" start="{{startDates}}"  bindchange="bindDateEndChange">  
          <view class="picker">  
            <input class="endTimeInput" disabled="disabled"  value='{{endDates}}'></input> 
          </view>  
          </picker>  
        </view> 
      </view>

  </form>
</view>
